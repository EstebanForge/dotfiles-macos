#!/bin/bash

# =============================================================================
# SECRETS CONFIGURATION FILE
# =============================================================================
# 
# This file contains sensitive information and environment variables.
# Copy this file to ~/.secrets and fill in your actual values.
# 
# IMPORTANT: Never commit your actual secrets file to version control!
# 
# Usage:
#   - This file is automatically sourced by ~/.zshrc
#   - Can be sourced by scripts: source ~/.secrets
#   - Variables are available as environment variables
#
# Format:
#   export VARIABLE_NAME="value"
#   # Comments are ignored
#   # Empty lines are ignored
#
# =============================================================================

# =============================================================================
# API KEYS AND TOKENS
# =============================================================================

# Anthropic Claude API Key
# Get from: https://console.anthropic.com/
export ANTHROPIC_API_KEY="your-anthropic-api-key-here"

# GitHub Personal Access Token
# Get from: https://github.com/settings/tokens
export GITHUB_TOKEN="your-github-token-here"

# OpenAI API Key
# Get from: https://platform.openai.com/api-keys
export OPENAI_API_KEY="your-openai-api-key-here"

# =============================================================================
# CLOUD SERVICES
# =============================================================================

# AWS Credentials
export AWS_ACCESS_KEY_ID="your-aws-access-key"
export AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
export AWS_DEFAULT_REGION="us-west-2"

# DigitalOcean API Token
export DIGITALOCEAN_TOKEN="your-digitalocean-token"

# =============================================================================
# DATABASE CONNECTIONS
# =============================================================================

# Local Database Credentials
export DB_HOST="localhost"
export DB_USER="your-db-username"
export DB_PASSWORD="your-db-password"
export DB_NAME="your-database-name"

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Node.js/NPM Configuration
export NPM_TOKEN="your-npm-token"

# Docker Hub Token
export DOCKER_HUB_TOKEN="your-docker-hub-token"

# =============================================================================
# PERSONAL CONFIGURATION
# =============================================================================

# Your email for various services
export PERSONAL_EMAIL="your-email@example.com"

# Your full name
export FULL_NAME="Your Full Name"

# Custom domain (if applicable)
export PERSONAL_DOMAIN="your-domain.com"

# =============================================================================
# APPLICATION SPECIFIC
# =============================================================================

# Z.ai API (for Claude alternative)
export Z_API_KEY="your-z-api-key"

# Codeium/Windsurf
export CODEIUM_API_KEY="your-codeium-api-key"

# LM Studio
export LM_STUDIO_API_KEY="your-lm-studio-key"

# =============================================================================
# SECURITY NOTES
# =============================================================================

# 1. File Permissions:
#    Make sure your secrets file has proper permissions:
#    chmod 600 ~/.secrets
#
# 2. Backup:
#    Include ~/.secrets in your personal backup strategy
#
# 3. Sharing:
#    Never share this file or commit it to version control
#
# 4. Rotation:
#    Regularly rotate your API keys and tokens
#
# =============================================================================