# SSH client configuration
# This file manages SSH connections to various servers and services

# Global settings
Host *
    SendEnv LANG LC_*
    SetEnv TERM=xterm-256color
    ServerAliveInterval 60
    ServerAliveCountMax 3
    IdentitiesOnly yes
    IdentityAgent none

# GitHub - Git operations
Host github.com
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_ed25519
    IdentitiesOnly yes

# GitLab - Alternative Git hosting
Host gitlab.com
    HostName gitlab.com
    User git
    IdentityFile ~/.ssh/id_ed25519
    IdentitiesOnly yes

# Bitbucket - Git hosting
Host bitbucket.org
    HostName bitbucket.org
    User git
    IdentityFile ~/.ssh/id_ed25519
    IdentitiesOnly yes

# DigitalOcean Droplet - Example server
Host your-droplet
    HostName YOUR_DROPLET_IP
    User YOUR_USERNAME
    IdentityFile ~/.ssh/id_rsa_droplet
    ForwardAgent no
    ConnectTimeout 10

# WordPress hosting platforms

# WP Engine
Host *.wpengine.net
    IdentityFile ~/.ssh/id_rsa_wpe
    User YOUR_WPENGINE_USERNAME
    IdentitiesOnly yes

# Pantheon (Drupal hosting)
Host *.drush.in
    IdentityFile ~/.ssh/id_rsa_pantheon_2048
    PubkeyAcceptedKeyTypes ssh-rsa
    HostKeyAlgorithms rsa-sha2-256,rsa-sha2-512,ssh-rsa
    KexAlgorithms diffie-hellman-group14-sha1,diffie-hellman-group14-sha256
    Ciphers aes128-ctr,aes192-ctr,aes256-ctr,aes128-cbc,aes192-cbc,aes256-cbc
    MACs hmac-sha2-256,hmac-sha2-512

# Custom domains
Host *.yourdomain.com
    User YOUR_USERNAME
    IdentityFile ~/.ssh/id_rsa_domain
    ForwardAgent no
    ConnectTimeout 15

# Development servers
Host dev-*
    User developer
    IdentityFile ~/.ssh/id_rsa_dev
    ForwardAgent yes
    PermitLocalCommand yes
    ConnectTimeout 30

# Production servers
Host prod-*
    User deploy
    IdentityFile ~/.ssh/id_rsa_prod
    ForwardAgent no
    ConnectTimeout 10
    ServerAliveInterval 30

# Staging servers
Host staging-*
    User staging
    IdentityFile ~/.ssh/id_rsa_staging
    ForwardAgent no
    ConnectTimeout 15

# Local development - Vagrant/Docker
Host 192.168.*
    User vagrant
    IdentityFile ~/.ssh/id_rsa_vagrant
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null

# Local containers
Host 127.0.0.1
    Port 2222
    User docker
    IdentityFile ~/.ssh/id_rsa_docker
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null